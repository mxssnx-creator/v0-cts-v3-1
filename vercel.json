{
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install --legacy-peer-deps --no-optional",
  "env": {
    "NODE_ENV": "production",
    "NODE_PG_FORCE_NATIVE": "false",
    "npm_config_build_from_source": "false",
    "SKIP_OPTIONAL_DEPS": "true",
    "SKIP_NATIVE_ADDONS": "true"
  },
  "framework": "nextjs",
  "regions": ["iad1"],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "functions": {
    "app/api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "SKIP_POSTINSTALL": "1"
    }
  }
}
